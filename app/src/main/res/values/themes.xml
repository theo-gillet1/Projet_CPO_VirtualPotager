<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VirtualPotager" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Style du texte -->

    <!-- Style du Titre de L'appli -->
    <style name="Style_txt_Titre_App">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/kanit_semibold</item>
    </style>

    <!-- Style Description + msg Popup -->
    <style name="Style_txt_Descrip" parent="Style_txt_Titre_App">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style Titre -->
    <style name="Style_Titre" parent="Style_txt_Descrip">
        <item name="android:fontFamily">@font/troficanos</item>
        <item name="android:textSize">50dp</item>
    </style>

    <!-- Style Titre 2 -->
    <style name="Style_Titre2" parent="Style_txt_Descrip">
        <item name="android:fontFamily">@font/troficanos</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="txt_Recherche" parent="Style_txt_Descrip">
        <item name="android:fontFamily">@font/troficanos</item>
        <item name="android:textSize">30dp</item>
    </style>



    <style name="Theme.VirtualPotager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VirtualPotager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VirtualPotager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>